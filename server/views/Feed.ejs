<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/StyleSheets/Feed.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <div class="topBar">
        <img
          src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png"
          alt="logo"
          class="topBar_img"
        />

        <p class="top-text home">home</p>
        <p class="top-text explore">explore</p>
        <p class="top-text create"><a href="/createpost">create</a></p>
        
        <div class="dropdown dropdown-btn">
          <button class="btn  dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
             aria-expanded="false">
            home
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">explore</a>
            <a class="dropdown-item" href="/createpost">create</a>
          </div>
        </div>

        <input type="search" name="" id="searchBar" placeholder="search" />

        <img src="/Image/noti.png" alt="notification" class="noti" />

        <a href="/profile">
          <img src="<%= user.avtar %>" alt="user" class="user"
        /></a>
      </div>
    </div>

    <!-- feed of the page -->
    <div class="feed-cards">

      <% if(allUser.length > 0) { %>

      <% allUser.map(function (userPost) { %>

        <% if(userPost.posts.length > 0){ %>

        <% userPost.posts.map(function (post) { %>

          <div class="card">
            <img src="<%= post.imageUrl %>" class="card-img-top card-img" alt="user image">
            <div class="card-body">
              <p class="card-text">
                <%= post.caption %>
              </p>
              <button 
              class="btn btn-primary" 
              id="bookmarkBtn"
              data-postid="<%= post._id%>"
              data-userid="<%= post.user%>"
              >
              add to bookmark
            </button>
            </div>
          </div>

          <% }) %>

          <%} else { %>
            <p class="no-post">no post in the feed</p>
            <%}%>

        <% }) %>

        <% } else { %>
          <p class="no-post">no post in the feed</p>
          <% } %>

  


    </div>


    <script src="/Javascript/Feed.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    
  </body>
</html>
